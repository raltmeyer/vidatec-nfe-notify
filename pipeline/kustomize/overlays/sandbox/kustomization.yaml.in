# define os recursos a serem usados no ambiente de sandbox

apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
- ../../base

namespace: nfe-nofity-sandbox
nameSuffix: -sandbox

images:
  - name: vidatec_nfe_notify_import
    newName: vidatec_nfe_notify_import
    newTag: "${image_version}"

labels:
- includeSelectors: true
  pairs:
    app: nfe-nofity

patches:
- path: deployment.yaml

secretGenerator:
  - name: nfe-nofity-secret
    literals:
      - MYSQL_HOST=${MYSQL_HOST}
      - MYSQL_DB  =${MYSQL_DB}
      - MYSQL_USER=${MYSQL_USER}
      - MYSQL_PASS=${MYSQL_PASS}
      - MSSQL_HOST=${MSSQL_HOST}
      - MSSQL_DB  =${MSSQL_DB}
      - MSSQL_USER=${MSSQL_USER}
      - MSSQL_PASS=${MSSQL_PASS}
    type: Opaque

